{
  "compilerOptions": {
    "types": ["node", "react", "react-dom"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ES2024", "DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"],
      "@css/*": ["src/app/styles/*"],
      "@fonts/*": ["src/shared/assets/fonts/*"],
      "@img/*": ["src/shared/assets/img/*"],
      "@icons/*": ["src/shared/assets/icons/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true, // import * as api => import api from '../api'
    "isolatedModules": true,
    "esModuleInterop": true, // commonJS => import
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "resolveJsonModule": true, // import './*.json'
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true, // extra
    "noPropertyAccessFromIndexSignature": false, // dynamic fields: obj.key => obj['key']
    "noUncheckedIndexedAccess": false, // dynamic fields: obj.key => obj['key'].length
    "noImplicitReturns": false // all returns - not toggled
  },
  "include": [
    "src/",
    "index.tsx",
    "eslint.config.ts",
    "vite.config.ts",
    "webpack.alias.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
